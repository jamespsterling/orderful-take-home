{
  "name": "document-converter-api",
  "version": "1.0.0",
  "description": "API to convert documents between String, JSON, and XML formats",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx --watch src/index.ts",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:consumer": "vitest --run src/__tests__/contract/consumer",
    "test:provider": "vitest --run src/__tests__/contract/provider",
    "pact:publish": "node scripts/publish-pacts.js",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "demo": "tsx src/demo.ts"
  },
  "keywords": [
    "document-converter",
    "api",
    "typescript",
    "node"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "xml2js": "^0.6.2",
    "zod": "^4.0.0",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8",
    "openapi-types": "^12.1.3",
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "@pact-foundation/pact": "^13.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0",
    "@types/xml2js": "^0.4.14",
    "@types/swagger-ui-express": "^4.1.6",
    "typescript": "^5.3.2",
    "tsx": "^4.7.0",
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "@biomejs/biome": "^2.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
